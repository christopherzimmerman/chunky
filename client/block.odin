package cube

/*  Block_Type

    Represents a distinct block type in the world
*/
Block_Type      :: enum u8
{
    /*  AIR
    
        Represents an invisible non solid block
    */
    AIR,

    STONE,
    GRASS,
    DIRT,
    COBBLESTONE,
    WOOD_PLANKS,
    SAPLING,
    BEDROCK,

    /*  WATER
    
        Represents water in the world, current
        implementation only allows for still water
    */
    WATER,

    /*  LAVA
    
        Represents lava in the world, current
        implementation only allows for still lava
    */
    LAVA,

    SAND,
    GRAVEL,
    GOLD_ORE,
    IRON_ORE,
    COAL_ORE,
    WOOD,
    LEAVES,
    SPONGE,
    GLASS,

    /*  BUTTERCUP 

        Sprite flower object, transparent, no collisions
    */
    BUTTERCUP,

    /*  ROSE
    
        Sprite flower object, transparent, no collisions
    */
    ROSE,
    WOOL,
    CLAY,
    BRICKS,
    SNOW,
    TORCH,

    /*  TALL_GRASS 
    
        Transparent, no collisions, sprite object
    */
    TALL_GRASS,

    /*  CACTUS 
    
        TODO: weird transparency issues with several
        pixels in this texture
    */
    CACTUS,
    WET_DIRT,
    MOSSY_STONE,
    JACKOLANTERN,
    PACKED_SNOW,
}

