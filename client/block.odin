/*  block_is_opaque 

    Determines if a block should have some level of
    transparency
*/
block_is_opaque :: proc (block: Block_Type) -> bool
{
    #partial switch block
    {
        case .AIR, .WATER, .LEAVES, .SAPLING, .BUTTERCUP, .ROSE, .GLASS, .TALL_GRASS, .TORCH:
            return false
    }

    return true
}

/*  block_is_solid 

    Determines if a block should collide with the player
    or other items
*/
block_is_solid  :: proc (block: Block_Type) -> bool
{
    #partial switch block
    {
        case .AIR, .WATER, .LAVA, .BUTTERCUP, .ROSE, .TALL_GRASS, .SAPLING:
            return false
    }

    return true
}

/*  block_connects

    Determines if a block should present a boundary
    between other blocks, helps not to render connecting
    liquids and glass
*/
block_connects  :: proc (block: Block_Type) -> bool
{
    #partial switch block
    {
        case .WATER, .GLASS:
            return true
    }

    return false
}

/*  block_emits_light 

    Determine if a block can be considered a light source
*/
block_emits_light :: proc (block: Block_Type) -> bool
{
    #partial switch block
    {
        case .TORCH, .LAVA:
            return true
    }
    return false
}